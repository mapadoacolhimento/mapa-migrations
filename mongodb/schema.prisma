generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
  output          = "../../node_modules/@prisma-mongodb/client"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_URL")
}

enum SupportType {
  psychological
  legal

  @@map("support_type")
}

model MsrRegisterData {
  id                   String        @id @default(auto()) @map("_id") @db.ObjectId
  email                String        @unique
  firstName            String?
  confirmEmail         String?
  phone                String?
  confirmPhone         String?
  dateOfBirth          String?
  color                String?
  hasDisability        String?
  acceptsOnlineSupport String?
  supportType          SupportType[]
  gender               String?
  genderViolence       String?
  violenceLocation     String?
  externalSupport      String[]
  financialNeed        String?
  terms                Boolean?
  zipcode              String?
  neighborhood         String?
  city                 String?
  state                String?
  street               String?
  lat                  Float?
  lng                  Float?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @default(now())
  monthlyIncome        String?
  monthlyIncomeRange   Float?
  employmentStatus     String?
  dependants           String?
  familyProvider       String?
  propertyOwnership    String?
  violenceType         String[]
  disability           String?
  violenceTime         String?
  perpetratorGenderId  String?
}
